# =============================================================================
# Orpheus Blog - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your values
# For Vercel: Add NEXT_PUBLIC_ prefixed variables in Vercel Dashboard
# For Render: Add all backend variables in Render Dashboard
# =============================================================================

# -----------------------------------------------------------------------------
# Server Configuration
# -----------------------------------------------------------------------------

# Server port (Render will set this automatically)
PORT=3000

# Environment: development | production | test
NODE_ENV=development

# Allowed CORS origins (comma-separated, required in production)
# Example: https://your-frontend.vercel.app,https://custom-domain.com
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# MySQL/TiDB connection string
# Format: mysql://user:password@host:port/database?ssl={"rejectUnauthorized":true}
DATABASE_URL=mysql://user:password@localhost:3306/orpheus_blog

# -----------------------------------------------------------------------------
# Authentication Configuration
# -----------------------------------------------------------------------------

# JWT secret for session signing (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-this

# Admin email - users with this email will have admin privileges
ADMIN_EMAIL=admin@example.com

# Session cookie name (optional, default: app_session)
SESSION_COOKIE_NAME=app_session

# Session max age in days (optional, default: 365)
SESSION_MAX_AGE_DAYS=365

# -----------------------------------------------------------------------------
# Storage Configuration (S3 / Cloudflare R2 / MinIO)
# -----------------------------------------------------------------------------

# Storage provider: s3 | local
STORAGE_PROVIDER=s3

# AWS S3 or S3-compatible service credentials
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1

# S3 bucket name
S3_BUCKET=your-bucket-name

# S3 endpoint (optional, for Cloudflare R2 or MinIO)
# Cloudflare R2: https://<account-id>.r2.cloudflarestorage.com
# MinIO: http://localhost:9000
S3_ENDPOINT=

# -----------------------------------------------------------------------------
# OpenAI Configuration (Optional - for AI features)
# -----------------------------------------------------------------------------

# OpenAI API key
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI API base URL (optional, default: https://api.openai.com/v1)
# Use this for Azure OpenAI or other compatible APIs
OPENAI_BASE_URL=https://api.openai.com/v1

# OpenAI model (optional, default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# =============================================================================
# Frontend Environment Variables (Vercel)
# =============================================================================
# These variables must be prefixed with VITE_ for Vite to expose them
# Add them in Vercel Dashboard under Project Settings > Environment Variables

# API Base URL - your Render backend URL
VITE_API_BASE_URL=http://localhost:3000

# App title (optional)
VITE_APP_TITLE=Orpheus Blog

# =============================================================================
# Optional Services
# =============================================================================

# Email service (for notifications)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_FROM=noreply@example.com

# Google Maps API (for location features)
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
